                    <div class="container">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="area-president text-center">
                                    <div class="img-president">
                                        <img src="~/site_assets/assets/img/president.png" alt="Yönetim Kurulu" class="img-cover" />
                                    </div>
                                    <div class="img-detail">
                                        <h4 class="title">Özgür Burak AKKOL</h4>
                                        <h5 class="subtitle">MESS Yönetim Kurulu Başkanı</h5>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="content">
                                    <!--<h4 class="title">Lorem ipsum dolor sit amet consectetur.<br>
                                            Nunc in leo id</h4>-->
                                    <p>
                                        @Html.Raw(ViewBag.yatirimci.sayfa_ozet)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="me-three-box section">
                    <div class="container">
                        <div class="head-title">
                            <h2 class="title">MESS Yatırımcı Görüşü Endeksi</h2>
                            <!--<h3 class="subtitle">Alt Bileşenleri</h3>-->
                        </div>

                        <div class="grid">
                            <a href="#me-why-amac" class="btn-three-box">
                                <div class="icon"><img src="~/site_assets/assets/img/icons/flag-blue.svg" alt="" /></div>
