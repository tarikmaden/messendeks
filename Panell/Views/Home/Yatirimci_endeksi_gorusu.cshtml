                                <div class="hover"><img src="~/site_assets/assets/img/three-box-bg.png" alt="" /></div>
                            </a>

                            <a href="#me-why-kapsam" class="btn-three-box">
                                <div class="icon"><img src="~/site_assets/assets/img/icons/database-blue.svg" alt="" /></div>
                                <div class="text">Kapsam</div>
                                <div class="hover"><img src="~/site_assets/assets/img/three-box-bg.png" alt="" /></div>
                            </a>

                            <a href="#me-why-girdiler" class="btn-three-box">
                                <div class="icon"><img src="~/site_assets/assets/img/icons/stats-blue.svg" alt="" /></div>
                                <div class="text">Girdiler</div>
                                <div class="hover"><img src="~/site_assets/assets/img/three-box-bg.png" alt="" /></div>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="me-why section">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="content">
                                    <div class="box" id="me-why-amac">
                                        <img src="~/site_assets/assets/img/nedir-text.svg" alt="nedir" class="mb-4" />
                                        <div class="head-title">
                                            @Html.Raw(ViewBag.yatirimci.sayfa_icerik)
                                        </div>
                                    </div>
                                </div>
                            </div>

