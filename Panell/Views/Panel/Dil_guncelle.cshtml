@model Panell.Models.Diller
@{
    ViewData["Title"] = "Sayfa Güncelle";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Model.dil_adi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active">@Model.dil_adi</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form asp-action="Dil_update" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Genel</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <input type="hidden" name="ID" asp-for="@Model.ID" id="inputName" class="form-control">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="inputName">Dil Adı</label>
                                        <input type="text" asp-for="@Model.dil_adi" name="dil_adi" id="inputName" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="inputName">Dil Kısaltma</label>
                                        <input type="text" asp-for="@Model.dil_kisaltma" name="dil_kisaltma" id="inputName" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <div class="row" style="margin-bottom:20px">
                <div class="col-12">
                    <a href="#" class="btn btn-secondary">Vazgeç</a>
                    <input type="submit" value="Dil Oluştur" class="btn btn-success float-right">
                </div>
            </div>
        </form>
    </section>
    <!-- /.content -->


</div>
<!-- /.content-wrapper -->