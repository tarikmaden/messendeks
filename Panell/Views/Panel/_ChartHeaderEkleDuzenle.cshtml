@model Panell.Models.ChartModel

<form id="frm-serialize">
    @Html.HiddenFor(a=>a.ChartRadarHeader.Id)
    <div class="row">

        <div class="col-6">
            <div class="form-group">
                <b>Grup Adı</b>
                @Html.TextBoxFor(a=>a.ChartRadarHeader.ChartRadarHeaderAdi,new{@class="form-control w-100"})
            </div>
          
        </div>


            <div class="col-6">
           
            <div class="form-group">
                <b>Grup Rengi</b>
                @Html.TextBoxFor(a=>a.ChartRadarHeader.RenkKodu ,new{@class="form-control w-100", @type="color", @style="min-height:100px;"})
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Tanım Adı</th>
                        <th>Değer-1</th>
                        <th>Değer-2</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ChartRadarItems.Count; i++)
                    {
                        var item = Model.ChartRadarItems[i];

                        <tr>
                            @*@Html.HiddenFor(a=>a.ChartRadarItems[i].Id)*@

                            <td>@(i + 1)</td>
                         <td>
                                @Html.TextBoxFor(a=>a.ChartRadarItems[i].ChartRadarItemAdi,new{@class="form-control"})
                         </td>
                           <td>
                                @Html.TextBoxFor(a=>a.ChartRadarItems[i].Deger1,new{@class="form-control"})
                         </td>
                              <td>
                                @Html.TextBoxFor(a=>a.ChartRadarItems[i].Deger2,new{@class="form-control"})
                             </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <a href="javascript:" onclick="frmSerialize()" class="btn btn-primary w-100">
              <i class="fas fa-edit"></i>  KAYDET
            </a>
        </div>
    </div>
</form>

