@model Panell.Models.Users
@{
    ViewData["Title"] = "Ayarlar";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Ayarlar Güncelleme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active">Ayarlar Güncelleme</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form asp-action="Ayarlar_update" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Genel</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <input type="hidden" name="ID" asp-for="@Model.ID" id="inputName" class="form-control">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName">Ad Soyad</label>
                                <input type="text" name="user_name" asp-for="@Model.user_name" id="inputName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="inputDescription">E-Mail</label>
                                <input type="text" name="user_email" asp-for="@Model.user_email" id="inputName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="inputDescription">Şifre</label>
                                <input type="text" name="user_password" id="inputName" class="form-control">
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <div class="row" style="margin-bottom:20px">
                <div class="col-12">
                    <a href="#" class="btn btn-secondary">Vazgeç</a>
                    <input type="submit" value="Ayarlar Güncelle" class="btn btn-success float-right">
                </div>
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

