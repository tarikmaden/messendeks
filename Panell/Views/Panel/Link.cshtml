@model Panell.Models.Sayfalar
@{
    ViewData["Title"] = "Sayfa Güncelle";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Model.sayfa_adi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active">@Model.sayfa_adi</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

  
    <section class="content">
        <form asp-action="Link_guncel" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Genel</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <input type="hidden" name="ID" asp-for="@Model.ID" id="inputName" class="form-control" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName">Sonuçları İncele</label>
                                <input type="text" name="sayfa_order" asp-for="@Model.sayfa_order" id="inputName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="inputName">Daha Fazla</label>
                                <input type="text" name="sayfa_ozet" asp-for="@Model.sayfa_ozet" id="inputName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="inputName">MESS Yatırımcı Görüşü'nü İncele</label>
                                <input type="text" name="sayfa_icerik" asp-for="@Model.sayfa_icerik" id="inputName" class="form-control" />
                            </div>
                            <div class="form-group">
                                @if (Model.sayfa_resim != null)
                                { 
                                    <a href="/uploads/@Model.sayfa_resim" download="/uploads/@Model.sayfa_resim">
                                        <i style="font-size: 50px;" class="fas fa-file"></i>
                                    </a> <br> <br>
                                    <a asp-action="Resim_sil" asp-route-id="@Model.ID" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Sil
                                    </a> <br>
                                }
                                <label for="inputDescription">MESS Yatırımcı Görüşü'nü İndir </label>
                                <input type="file" name="dosya" id="inputName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <a href="#" class="btn btn-secondary">Vazgeç</a>
                                <input type="submit" value="Güncelle" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>

    

</div>
<!-- /.content-wrapper -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>